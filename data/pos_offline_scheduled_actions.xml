<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Scheduled Action: Retry Failed Offline Transactions

             Purpose: Automatically retry syncing failed offline transactions
             using exponential backoff retry logic.

             Schedule: Every 5 minutes
             Impact: Critical - Ensures no orders are permanently lost
        -->
        <record id="ir_cron_retry_offline_transactions" model="ir.cron">
            <field name="name">Retry Failed Offline Transactions</field>
            <field name="model_id" ref="model_pos_offline_transaction"/>
            <field name="state">code</field>
            <field name="code">
model.retry_failed_transactions()
            </field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="True"/>
        </record>

        <!-- Scheduled Action: Clean up Old Synced Transactions

             Purpose: Remove old successfully synced transactions to keep
             database clean and improve performance.

             Schedule: Daily at 2 AM
             Retention: 30 days
        -->
        <record id="ir_cron_cleanup_offline_transactions" model="ir.cron">
            <field name="name">Clean up Old Offline Transactions</field>
            <field name="model_id" ref="model_pos_offline_transaction"/>
            <field name="state">code</field>
            <field name="code">
model.cleanup_old_transactions(days=30)
            </field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="True"/>
            <!-- Run at 02:00 UTC -->
            <field name="nextcall">
                <!-- Will be set by system on first execution -->
            </field>
        </record>

        <!-- Scheduled Action: Enforce Session Expiry

             Purpose: Cleanup expired offline sessions for all users.
             Prevents unlimited access if device is stolen.

             Schedule: Every 30 minutes
             Impact: Critical security - Ensures sessions don't live forever
        -->
        <record id="ir_cron_enforce_session_expiry" model="ir.cron">
            <field name="name">Enforce Offline Session Expiry</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="state">code</field>
            <field name="code">
env['res.users'].enforce_offline_session_expiry()
            </field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="True"/>
        </record>

        <!-- Scheduled Action: Clean up Model Cache

             Purpose: Remove old cached model entries to save database space.

             Schedule: Hourly
             Retention: Models cached > 1 hour are removed
        -->
        <record id="ir_cron_cleanup_model_cache" model="ir.cron">
            <field name="name">Clean up Offline Model Cache</field>
            <field name="model_id" ref="model_pos_offline_model_cache"/>
            <field name="state">code</field>
            <field name="code">
model.cleanup_expired_cache()
            </field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="True"/>
        </record>

        <!-- Scheduled Action: Clean up Queue

             Purpose: Remove old completed queue entries.

             Schedule: Daily at 3 AM
             Retention: 7 days
        -->
        <record id="ir_cron_cleanup_queue" model="ir.cron">
            <field name="name">Clean up Offline Queue</field>
            <field name="model_id" ref="model_pos_offline_queue"/>
            <field name="state">code</field>
            <field name="code">
model.cleanup_completed_queue_items(days=7)
            </field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="True"/>
        </record>
    </data>
</odoo>
