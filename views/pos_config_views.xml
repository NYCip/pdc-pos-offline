<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- POS Configuration Form - Add Offline Settings -->
    <record id="view_pos_config_form_offline" model="ir.ui.view">
        <field name="name">pos.config.form.offline</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='receipt_invoice']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="pdc_offline_settings">
                    <div class="o_setting_left_pane">
                        <field name="enable_offline_mode"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_offline_mode" string="Enable Offline Mode"/>
                        <div class="text-muted">
                            Allow POS to operate when internet connection is unavailable
                        </div>
                        <div class="content-group" attrs="{'invisible': [('enable_offline_mode', '=', False)]}">
                            <div class="mt16">
                                <label for="offline_session_timeout" string="Session Timeout"/>
                                <field name="offline_session_timeout" class="oe_inline"/> hours
                                <div class="text-muted">
                                    Offline sessions expire after this duration of inactivity
                                </div>
                            </div>
                            <div class="mt16">
                                <label for="offline_data_limit" string="Storage Limit"/>
                                <field name="offline_data_limit" class="oe_inline"/> MB
                                <div class="text-muted">
                                    Maximum offline data storage (orders, products, etc.)
                                </div>
                            </div>
                            <div class="mt16">
                                <label for="offline_sync_interval" string="Sync Interval"/>
                                <field name="offline_sync_interval" class="oe_inline"/> minutes
                                <div class="text-muted">
                                    How often to sync data when connection is restored
                                </div>
                            </div>
                            <div class="mt16">
                                <field name="offline_pin_required"/>
                                <label for="offline_pin_required" string="Require PIN for Offline Access"/>
                            </div>
                            <div class="mt16">
                                <field name="offline_max_attempts"/>
                                <label for="offline_max_attempts" string="Maximum PIN Attempts"/>
                                <div class="text-muted">
                                    Lock account after this many failed PIN attempts
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>